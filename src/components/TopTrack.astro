---
// TopTrack.astro - Client-side component
---

<div class="top-track" id="top-track-container">
  <p>Current obsession: </p>
  <img src="/images/spotify-pixel.svg">
  <a href="#" class="track-name" id="track-link">Loading...</a>
</div>

<style>
  .top-track {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .top-track img {
    width: auto;
    height: 20px;
  }
  
  .track-name {
    font-size: inherit;
    color: var(--grey);
  }
  .track-name:hover {
    color: var(--black);
  }
</style>

<script>
  (async function() {
    try {
      const response = await fetch('/.netlify/functions/top-track');
      
      if (!response.ok) {
        throw new Error('Failed to fetch top track');
      }
      
      const data = await response.json();
      
      const linkElement = document.getElementById('track-link');
      if (linkElement) {
        linkElement.href = data.url;
        linkElement.textContent = `${data.artist} - ${data.name}`;
      }
    } catch (error) {
      console.error('Error fetching top track:', error);
      const linkElement = document.getElementById('track-link');
      if (linkElement) {
        linkElement.textContent = 'No track data';
      }
    }
  })();
</script>